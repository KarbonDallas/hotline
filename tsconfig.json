{
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"lib": ["esnext"],
		"module": "NodeNext",
		"incremental": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Recommended"
}
