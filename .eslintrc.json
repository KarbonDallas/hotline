{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "import"],
	"ignorePatterns": ["**/*.map", "**/*.tsbuildinfo"],
	"rules": {
		"curly": ["error", "all"],
		"eqeqeq": ["error", "always", { "null": "never" }],
		"no-else-return": "error"
	}
}
